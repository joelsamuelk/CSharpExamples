<Window x:Class="PageExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" Height="18" VerticalAlignment="Top">
            <MenuItem Header="Student">
                <MenuItem x:Name="ViewStudents" Header="View" Click="ViewStudents_Click"/>
                <MenuItem x:Name="AddStudents" Header="Add" Click="AddStudents_Click"/>
            </MenuItem>

            <MenuItem Header="Courses">
                <MenuItem x:Name="ViewCourses" Header="View" Click="ViewCourses_Click"/>
            </MenuItem>


        </Menu>
        <Frame x:Name="pageFrame" Margin="0,0,0,0" NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
