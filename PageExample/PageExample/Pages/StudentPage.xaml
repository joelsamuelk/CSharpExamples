<Page x:Class="PageExample.Pages.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PageExample.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StudentPage">

    <Grid>
        <Label x:Name="label" Content="Name:" HorizontalAlignment="Left" Margin="44,26,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" Text="{Binding Path=Name}" HorizontalAlignment="Left" Height="22" Margin="126,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy" Content="Surname:" HorizontalAlignment="Left" Margin="44,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSurname" Text="{Binding Path=Surname}" HorizontalAlignment="Left" Height="22" Margin="126,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="214,270,0,0" VerticalAlignment="Top" Width="76" Click="btnSave_Click"/>

    </Grid>
</Page>
